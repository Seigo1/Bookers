<!DOCTYPE html>
<html>
  <body>
    <div class="header">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>
        <div class="field">
          <labe>Title</label>
          <div><%= f.text_field :title %></div>
        </div>

        <div class="field">
          <label>Body</label>
          <%= f.text_area :body %>
        </div>
        <div class="field"><%= f.submit 'Update Book'%></div>
      <% end %>
      <%= link_to "show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
  </div>
</html>